            "ymin": {
                "classNames": "col-sm-2"
            },
            "ymax": {
                "classNames": "col-sm-2"
            },
            "options": {
                "classNames": "col-sm-8",
                "ui:widget": {
                    "component": "checkboxes",
                    "options": {
                        "inline": true
                    }
                }
            },
            "datasources": {
                "classNames": "col-sm-12",
                "ui:options": {
                    "orderable": true
                },
                "items": {
                    "datasource": {
                        "classNames": "col-sm-4"
                    },
                    "displayname": {
                        "classNames": "col-sm-3"
                    },
		            "color": {
		                "classNames": "col-sm-1",
		                "ui:widget": "color"
		            },
		            "options": {
		                "classNames": "col-sm-3",
		                "ui:widget": {
		                    "component": "checkboxes",
		                    "options": {
		                        "inline": true
		                    }
		                }
		            }
                }
            }
        }
    },
