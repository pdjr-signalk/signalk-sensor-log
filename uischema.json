{
    "databases": {
        "ui:field": "collapsible",
        "collapse": {
            "field": "ArrayField",
            "wrapClassName": "panel-group"
        },
        "ui:options": {
            "addable": true,
            "orderable": false,
            "removable": true
        },
        "items": {
            "name": "col-sm-2",
            "datasources": {
                "items": {
                    "name": {
                        "classNames": "col-sm-4"
                    },
                    "path": {
                        "classNames": "col-sm-8"
                    },
                    "multiplier": {
                        "classNames": "col-sm-4"
                    },
                    "min": {
                        "classNames": "col-sm-4"
                    },
                    "max": {
                        "classNames": "col-sm-4"
                    }
                }
            }
        }
    },
    "displaygroups": {
        "ui:field": "collapsible",
        "collapse": {
            "field": "ArrayField",
            "wrapClassName": "panel-group"
        },
        "ui:options": {
            "addable": true,
            "orderable": false,
            "removable": true
        },
        "items": {
            "id": {
                "classNames": "col-sm-4"
            },
            "title": {
                "classNames": "col-sm-4"
            },
            "ylabel": {
                "classNames": "col-sm-4"
